{
	"name": "iam-policy",
	"displayName": "iam-policy",
	"description": "Formatter for AWS IAM policy JSON file",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.47.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:iam-policy.sort",
		"onCommand:iam-policy.group"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "iam-policy.sort",
				"title": "Sort IAM Policy"
			},
			{
				"command": "iam-policy.group",
				"title": "Group IAM Policy"
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "resourceLangId == json",
					"command": "iam-policy.group",
					"group": "1_modification"
				},
				{
					"when": "resourceLangId == json",
					"command": "iam-policy.sort",
					"group": "1_modification"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.47.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {}
}
